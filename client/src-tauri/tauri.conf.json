{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Nyx Crawler Bot",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "nsis",
      "identifier": "com.nyxcrawler.bot",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "publisher": "Nyx",
      "category": "Productivity",
      "shortDescription": "Nyx Crawler Bot Desktop Application",
      "longDescription": "An advanced website visit automation tool with anti-detection technology.",
      "windows": {
        "digestAlgorithm": "sha256",
        "nsis": {
          "displayLanguageSelector": false,
          "installerIcon": "icons/icon.ico",
          "installMode": "perMachine",
          "languages": ["English"]
        }
      }
    },
    "security": {
      "csp": "default-src 'self' http://localhost:* https://*; img-src 'self' data: https://*; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Nyx Crawler Bot",
        "width": 1200
      }
    ]
  }
}